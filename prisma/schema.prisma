// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @default(cuid())
  name     String
  email    String     @unique
  password String
  roles    UserRole[]
  venues   Venue[]
  listings Listing[]
}

enum UserRole {
  ADMIN
  EDITOR
  VENUE
}

enum ListingType {
  Screening
  Exhibition
}

model Listing {
  id          String      @id @default(cuid())
  type        ListingType
  title       String
  year        String?
  runtime     String?
  language    String[]
  subs        String[]
  series      Series?     @relation(fields: [seriesId], references: [id])
  seriesId    String?
  director    String[]
  artist      String[]
  cast        String[]
  venue       Venue?      @relation(fields: [venueId], references: [id])
  venueId     String?
  showtimes   Showtime[]
  listingUrl  String?
  createdBy   User        @relation(fields: [createdById], references: [id])
  createdById String
  updatedAt   DateTime?   @updatedAt
  createdAt   DateTime?   @default(now())
}

model Series {
  id          String    @id @default(cuid())
  title       String
  listings    Listing[]
  seriesUrl   String?
  description String?
}

model Showtime {
  id          String    @id @default(cuid())
  date        DateTime  @db.Date
  endDate     DateTime? @db.Date
  time        DateTime? @db.Time(4)
  endTime     DateTime? @db.Time(4)
  listing     Listing   @relation(fields: [listingId], references: [id])
  listingId   String
  showtimeUrl String?
}

model Venue {
  id       String    @id @default(cuid())
  name     String
  address  String?
  phone    String?
  hours    String?
  url      String?
  listings Listing[]
  listers  User[]
}
